<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>InitializeInventory</servlet-name>
    <servlet-class>resistorSorter.servlet.InitializeInventoryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultiplyNumbers</servlet-name>
    <servlet-class>resistorSorter.servlet.MultiplyNumbersServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>ReplaceResistor</servlet-name>
    <servlet-class>resistorSorter.servlet.ReplaceResistorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TakeResistor</servlet-name>
    <servlet-class>resistorSorter.servlet.TakeResistorServlet</servlet-class>
  </servlet>
  


  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>InitializeInventory</servlet-name>
    <url-pattern>/InitializeInventory</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultiplyNumbers</servlet-name>
    <url-pattern>/MultiplyNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReplaceResistor</servlet-name>
    <url-pattern>/ReplaceResistor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TakeResistor</servlet-name>
    <url-pattern>/TakeResistor</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
